{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "permissions": {
    "allow": [
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(tree:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(xcodebuild:*)",
      "Bash(printf:*)",
      "Bash(osascript:*)",
      "Skill",
      "mcp__*",
      "mcp__xcodebuildmcp__*",
      "mcp__XcodeBuildMCP__*",
      "mcp__plugin_context7_context7__*",
      "Search",
      "Read",
      "WebSearch"
    ],
    "defaultMode": "plan"
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/english-coach.sh",
            "statusMessage": "English coaching..."
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash -c '\"/opt/homebrew/bin/node\" \"$(ls -td ~/.claude/plugins/cache/claude-hud/claude-hud/*/ 2>/dev/null | head -1)dist/index.js\"'"
  },
  "enabledPlugins": {
    "swift-lsp@claude-plugins-official": true,
    "ralph-loop@claude-plugins-official": true,
    "superpowers@superpowers-marketplace": true,
    "playground@claude-plugins-official": true,
    "suggest-tidyings@corca-plugins": true,
    "claude-hud@claude-hud": true,
    "document-skills@anthropic-agent-skills": true,
    "example-skills@anthropic-agent-skills": true,
    "swiftui-expert@swiftui-expert-skill": true,
    "xcsift@xcsift": true
  },
  "language": "Korean"
}
